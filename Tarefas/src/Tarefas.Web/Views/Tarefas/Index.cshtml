@model IEnumerable<Tarefas.Web.Models.TarefaViewModel>

    <table class="table table-dark">
        <thead> 
                 
            <tr>
                 <td>
                    ID
                </td>
                <td>
                    Titulo
                </td>
                <td>
                    Descricao
                </td>
                 <td>
                    Opções
                </td>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Titulo
                </td>
                <td>
                    @item.Descricao
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Tarefas" asp-route-id="@item.Id"> Detalhes </a>
                </td>
                
        </tr>
        }
    </table>